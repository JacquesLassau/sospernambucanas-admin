@model DLLsSosPernambucanas.DML.AtendenteViewModelDML

@{Layout = null;}
<!DOCTYPE Html>
<html>
<head>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">    
    <script>
        var atendentes = @(Html.Raw(Json.Encode(Model)));
    </script>
    <style>
        body {
            overflow-x: hidden;
            overflow-y: hidden;
        }
        .dataTables_length { display:none; }
        .dataTables_filter { float:right; margin-right: 2px; margin-bottom:12px; font-size: 0.75em;}
    </style>
</head>
<body class="pagination-container">    

    @using (Html.BeginForm("BuscarAtendenteAR", "Atendente", FormMethod.Get))
    {
        @Html.AntiForgeryToken()

        <table id="tabAtendentes" class="table table-striped">
            <thead>
                <tr>
                    <th class="orderBy-table"><i class="fa fa fa-sort"></i> Id</th>
                    <th class="orderBy-table"><i class="fa fa fa-sort"></i> E-mail</th>
                    <th class="orderBy-table"><i class="fa fa fa-sort"></i> Nome</th>
                    <th class="orderBy-table"><i class="fa fa fa-sort"></i> Ação</th>
                </tr>
            </thead>
            <tbody id="CarregarAtendentes">
            </tbody>
        </table>
    }

    <script src="https://code.jquery.com/jquery-3.5.1.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap5.min.js"></script>    
    <script>
        $(document).ready(function () {
            $('#tabAtendentes').DataTable({                            
                "language": {
                    "lengthMenu": "_MENU_",
                    "zeroRecords": "Nenhum registro encontrado",
                    "info": "",
                    "infoEmpty": "Nenhum registro disponível",
                    "infoFiltered": "(filtrado de _MAX_ registros no total)",
                    "search": "Pesquisar:",
                    "paginate": {
                        "previous": "Anterior",
                        "next": "Próximo"
                    }
                },
                "lengthMenu": [[5, 10, 25, 50, -1], [5, 10, 25, 50, "All"]]
            });           
        });
    </script>

    @Scripts.Render("~/Scripts/Atendente/BuscarAtendente.js")
    @Scripts.Render("~/Scripts/Atendente/ListarAtendentes.js")    
</body>
</html>

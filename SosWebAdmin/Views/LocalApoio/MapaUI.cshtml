@{Layout = "~/Views/Shared/_Layout.cshtml";}

<div id="googleMap" style="width: 100%; height: 524px;" class="mt-2"></div>

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12 d-flex justify-content-center mt-2">
    <a class="btn form-group btn-novo-mapa" href="@Url.Action("CadastrarLocalApoioUI","LocalApoio")"><i class="fa fa-map-marker"></i> NOVO</a>&nbsp;     
    <a class="btn form-group btn-voltar-mapa" href="@Url.Action("Index","Home")"><i class="fa fa-mail-reply"></i> VOLTAR</a>
</div>

<div class="modal fade" role="dialog" id="modalLocalApoio">
    <div class="modal-dialog">
        <div class="m-0 modal-content">
            <div class="modal-body">
                <label><b id="titulo-endereco"></b></label><br />
                <label id="descricao-endereco"></label>
                <hr />
                <label><b id="titulo-bairro"></b></label><br />
                <label id="descricao-bairro"></label>
                <hr />
                <label><b id="titulo-cidade"></b></label><br />
                <label id="descricao-cidade"></label>
                <hr />
                <label><b id="titulo-estado"></b></label><br />
                <label id="descricao-estado"></label>
                <hr />
                <label><b id="titulo-telefone"></b></label><br />
                <label id="descricao-telefone"></label>
            </div>
            <div class="modal-footer">
                <a class="btn btn-large btn-tema form-group" data-dismiss="modal" id="abrir-google"><i class="fa fa-google"></i> Google</a>
                @using (Html.BeginForm("ExcluirLocalApoioAR", "LocalApoio", FormMethod.Get))
                {                    
                    <button type="submit" value="" name="btnExcluirLocal" id="btnExcluirLocal" class="btn btn-large btn-tema form-group"><i class="fa fa-trash"></i> Excluir</button>                    
                }
                <a class="btn btn-large btn-tema form-group" data-bs-dismiss="modal"><i class="fa fa-close"></i> Fechar</a>
            </div>
        </div>
    </div>
</div>


